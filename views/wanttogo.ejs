<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-image: url("background3.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
            margin: 0;
        }

        h1 {
            color: white;
            text-align: center;
            -webkit-text-stroke: 1px blue;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .navbar-brand {
            color: rgb(191, 255, 161) !important;
        }

        .navbar-form {
            width: 100%;
        }

        .search-bar {
            width: 50%;
            margin-left: auto;
            margin-right: auto;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 100px); /* Adjust height to leave space for the header */
        }

        table {
            width: 60%;
            margin-top: 20px;
            border-collapse: collapse;
            color: white;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
        }

        table, th, td {
            border: 1px solid lightblue;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
        }

        th {
            background-color: rgba(0, 0, 0, 0.5);
        }

        tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.3);
        }

        tr:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Want-to-Go List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<!-- Navbar with the Search Bar inside it -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
    <a class="navbar-brand">Want-to-Go List</a>
    <div class="navbar-collapse">
        <form method="POST" action='/search' class="form-inline my-2 my-lg-0 navbar-form">
            <input class="form-control mr-sm-2 search-bar" name="Search" type="search" placeholder="Search"
                   aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>

<!-- Content area -->
<div class="container">
    <div class="table-responsive">
        <table>
            <thead>
            <tr>
                <th>Destination</th>
            </tr>
            </thead>
            <tbody>
            <% if (destinations && destinations.length > 0) { %>
                <% destinations.forEach(function(destination) { %>
                    <tr>
                        <td><%= destination %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="1">You don't have any destinations in your list.</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
